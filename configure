#!/bin/sh
#*=====================================================================*/
#*    serrano/prgm/utils/hopsmtp/configure                             */
#*    -------------------------------------------------------------    */
#*    Author      :  Manuel Serrano                                    */
#*    Creation    :  Sat Jul 31 06:49:37 2004                          */
#*    Last change :  Tue Jun 18 08:24:56 2024 (serrano)                */
#*    Copyright   :  2004-24 Manuel Serrano                            */
#*    -------------------------------------------------------------    */
#*    HOPSTMP autoconfiguration                                        */
#*=====================================================================*/

#*---------------------------------------------------------------------*/
#*    configure parameters                                             */
#*---------------------------------------------------------------------*/
hz=hopsmtp
version=`grep version package.json | awk '{ print $2 }' | sed 's/[",]//g'`
license=`grep license package.json | awk '{ print $2 }' | sed 's/[",]//g'`
date=`date +'%d %B %Y'`
minor=

license=gpl

#*---------------------------------------------------------------------*/
#*    User flags                                                       */
#*---------------------------------------------------------------------*/
prefix=/usr/local
etcdir=$prefix/etc
libdir=$prefix/lib/hopsmtp
bindir=$prefix/bin
mandir=$prefix/man

hop=hop
hopc=hopc
hflags=-O2

main=`grep main package.json | awk '{ print $2 }' | sed 's/[",]//g'`

# environment parsing
if [ "$HFLAGS " != " " ]; then
  hflags=$HFLAGS;
fi

# Argument parsing
while : ; do
  case $1 in
    "")
      break;;

    --prefix=*)
      prefix="`echo $1 | sed 's/^[^=]*=//'`";
      bindir=$prefix/bin;
      libdir=$prefix/lib/hopsmtp;
      mandir=$prefix/man/$mansec;
      etcdir=$prefix/etc;
      contribsdir=$prefix/share/hop/contribs
      docdir=$prefix/share/doc/hop;;

    --etcdir=*)
      etcdir="`echo $1 | sed 's/^[^=]*=//'`";;

    --bindir=*)
      bindir="`echo $1 | sed 's/^[^=]*=//'`";;

    --libdir=*)
      libdir="`echo $1 | sed 's/^[^=]*=//'`";;

    --mandir=*)
      mandir="`echo $1 | sed 's/^[^=]*=//'`";;

    --hop=*)
      hop="`echo $1 | sed 's/^[^=]*=//'`";;

    --hopc=*)
      hopc="`echo $1 | sed 's/^[^=]*=//'`";;

    --hflags=*)
      hflags="`echo $1 | sed 's/^[^=]*=//'`";;

    --debug)
      hflags=-g;;

    -*)
      if [ $1 != "--help" ]; then
        echo "*** Configure error, unknown option $1" >&2;
        echo >&2;
      fi
      echo "Usage: configure [options]" >&2;
      echo "" >&2;
      echo "options:" >&2;
      echo "   --help..................... this message" >&2;
      echo "   --hop=path................. hop command" >&2;
      echo "   --hopc=path................ hopc command" >&2;
      echo "   --hflags=flags............. hopc flags" >&2;
      echo "   --prefix=dir............... prefix to HOP install" >&2;
      echo "   --etcdir=dir............... Hop etc directory" >&2;
      echo "   --bindir=dir............... alternative Hop bin directory" >&2;
      echo "   --libdir=dir............... alternative Hop lib directory" >&2;
      echo "   --mandir=dir............... alternative Hop man directory" >&2;
      echo "" >&2;
      exit 255;
  esac
  shift
done

#*---------------------------------------------------------------------*/
#*    sopath                                                           */
#*---------------------------------------------------------------------*/
hopversion=`$hop --configure --version`
libdir=`$hop --configure --libdir`
buildtag=`$hop --configure --build-tag`
buildarch=`$hop --configure --build-arch`
sodir=`$hop --configure --so-dirname`

#*---------------------------------------------------------------------*/
#*    checking hop installation                                        */
#*---------------------------------------------------------------------*/
syslog=$libdir/hop/$hopversion/node_modules/@hop/syslog/hop/$sodir/syslog.so

# check that Hop is correctly installed
if [ ! -f $syslog ]; then
  echo "*** ERROR: Cannot find $syslog"
  exit 1
fi

#*---------------------------------------------------------------------*/
#*    Patch the configuration files                                    */
#*---------------------------------------------------------------------*/
for p in bin/hopsmtp configure.js Makefile gdb.cmd; do
  cat $p.in \
      | sed -e "s|@RELEASE@|$version|g" \
            -e "s|@BRANCH@|$branch|g" \
            -e "s|@MAIN@|$main|g" \
            -e "s|@DATE@|$date|g" \
            -e "s|@DEVEL@|$devel|g" \
            -e "s|@DEBUG@|$debug|g" \
            -e "s|@BUILDDIR@|$PWD|g" \
            -e "s|@BINDIR@|$bindir|g" \
            -e "s|@LIBDIR@|$libdir/hopsmtp|g" \
            -e "s|@LIBPATH@|$libdir/hop/$hopversion|g" \
            -e "s|@HOP@|$hop|g" \
            -e "s|@HOPC@|$hopc|g" \
            -e "s|@HFLAGS@|$hflags|g" \
            -e "s|@SODIR@|$sodir|g" \
  > $p
done

chmod a+rx bin/hopsmtp

#*---------------------------------------------------------------------*/
#*    Create directories                                               */
#*---------------------------------------------------------------------*/
mkdir -p $sodir
mkdir -p node_modules/iconv-lite/lib/$sodir
mkdir -p node_modules/iconv-lite/encodings/$sodir
mkdir -p node_modules/minimist/$sodir
mkdir -p node_modules/smtp-connection/lib/$sodir
mkdir -p node_modules/smtp-connection/node_modules/nodemailer-shared/lib/$sodir
mkdir -p node_modules/smtp-connection/node_modules/nodemailer-shared/node_modules/nodemailer-fetch/lib/$sodir
mkdir -p node_modules/smtp-connection/node_modules/httpntlm/$sodir

#*---------------------------------------------------------------------*/
#*    Summary                                                          */
#*---------------------------------------------------------------------*/

# Generate the config.status file to please debian packages
echo "configuration completed" > config.status

echo "** Configuration summary **"
echo 
echo "Release:"
echo "  hopsmtp release number................ $version"
echo "  hop command........................... $hop $hopversion"
echo "  hopc command.......................... $hopc"
echo "  hflags ............................... $hflags"
echo "  etc directory......................... $etcdir"
echo "  bin directory......................... $bindir"
echo "  lib directory......................... $libdir/hopsmtp"
echo "  man directory......................... $mandir"
echo "  so directory.......................... $sodir"

